# Пример файла переменных окружения для production
# Скопируйте этот файл в .env и заполните реальными значениями

# База данных PostgreSQL
DB_USER=canteen_user
DB_PASSWORD=secure_password_change_me
DB_NAME=school_canteen
DB_HOST=postgres
DB_PORT=5432

# Секреты для сессий и JWT
SESSION_SECRET=change-this-secret-key-to-random-string-min-32-chars
JWT_SECRET=change-this-jwt-secret-to-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-refresh-secret-to-random-string-min-32-chars

# Ключ шифрования (должен быть ровно 32 символа)
ENCRYPTION_KEY=change-this-encryption-key-32c

# Email настройки (для отправки кодов доступа и уведомлений)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# URL фронтенда (для CORS и редиректов)
FRONTEND_URL=http://localhost

# Окружение
NODE_ENV=production
PORT=5000
