# Environment Variables Example
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development
PORT=80

# Database Configuration (for local development with Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=school_canteen
DB_USER=canteen_user
DB_PASSWORD=canteen_password_2024

# Or use DATABASE_URL (for Render/production)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-secret-key-here-minimum-32-characters

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ACCESS_TOKEN_SECRET=your-access-token-secret-here-minimum-32-characters
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-minimum-32-characters

# Encryption Key for personal data (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-encryption-key-here-minimum-32-characters

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Secret Codes for Registration (CHANGE THESE!)
ADMIN_SECRET_CODE=your-admin-secret-code-here
CHEF_SECRET_CODE=your-chef-secret-code-here
STUDENT_VERIFICATION_CODE=your-student-code-here

# Email Configuration (для отправки кодов верификации)
# Для Gmail нужно создать пароль приложения: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=ваш-email@gmail.com
EMAIL_PASSWORD=xxxx-xxxx-xxxx-xxxx
EMAIL_FROM=School Canteen <noreply@school-canteen.com>

# Skip email sending in development (показывает код в ответе API)
SKIP_EMAIL=true

# Альтернативные SMTP сервисы:
# Yandex: smtp.yandex.ru, port 465
# Mail.ru: smtp.mail.ru, port 465
# Mailtrap (для тестирования): smtp.mailtrap.io, port 2525

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15
MAX_PAYMENT_AMOUNT=50000
REQUIRE_2FA_AMOUNT=5000
MIN_PAYMENT_AMOUNT=1

# Rate Limiting
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
PAYMENT_RATE_LIMIT=5
