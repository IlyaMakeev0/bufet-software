# Environment Variables Example
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration (for local development with Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=school_canteen
DB_USER=canteen_user
DB_PASSWORD=canteen_password_2024

# Or use DATABASE_URL (for Render/production)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-secret-key-here-minimum-32-characters

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=School Canteen <noreply@school-canteen.com>
